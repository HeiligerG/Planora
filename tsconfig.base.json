{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@workspace/ui": ["./packages/ui/src"],
      "@workspace/ui/*": ["./packages/ui/src/*"],
      "@workspace/core": ["./packages/core/src"],
      "@workspace/core/*": ["./packages/core/src/*"]
    }
  }
}